<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.frontend.controllers.Controller">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <HBox prefHeight="56.0" prefWidth="526.0" BorderPane.alignment="CENTER">
                <ComboBox fx:id="fieldComboBox" prefWidth="150.0" promptText="Поле">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </ComboBox>
                <ComboBox fx:id="operationComboBox" prefHeight="26.0" prefWidth="74.0" promptText="==">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </ComboBox>
                <TextField fx:id="searchTextField" prefHeight="26.0" prefWidth="105.0" promptText="Значение">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </TextField>
                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#search" prefHeight="26.0" prefWidth="88.0" text="Поиск">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </Button>
            </HBox>
        </top>
        <center>
            <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="324.0" prefWidth="526.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                    <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Тип" />
                    <TableColumn fx:id="labelColumn" prefWidth="75.0" text="Имя" />
                    <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Описание" />
                    <TableColumn fx:id="addressColumn" prefWidth="75.0" text="Адрес" />
                    <TableColumn fx:id="sizeColumn" prefWidth="75.0" text="Размер" />
                    <TableColumn fx:id="valueColumn" prefWidth="75.0" text="Значение" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </center>
      <bottom>
         <HBox prefHeight="59.0" prefWidth="526.0" BorderPane.alignment="CENTER">
            <children>
               <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Старт" onAction="#start">
                  <HBox.margin>
                     <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </HBox.margin>
               </Button>
               <Button contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="120.0" text="Стоп" onAction="#stop">
                  <HBox.margin>
                     <Insets bottom="20.0" left="250.0" right="20.0" top="20.0" />
                  </HBox.margin>
               </Button>
            </children>
         </HBox>
      </bottom>
    </BorderPane>
</AnchorPane>
